<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="login.login.dao.UserDao">

    <select id="findById" resultType="user" parameterType="string">
        select * from user where user_id=#{id}
    </select>

    <update id="updatePassword" parameterType="string">
        update user set password=#{password} where user_id=#{id}
    </update>

    <insert id="registerUser" parameterType="user">
        insert into user values (#{user.userNum},#{user.userId},#{user.password},#{user.userName},#{user.userEmail},#{user.sex},#{user.userAge})
    </insert>

    <select id="total" resultType="int">
        select count(*) from user
    </select>

    <delete id="deleteInfo" parameterType="string">
        delete  from userinfo where user_num=#{id}
    </delete>

    <delete id="deleteUser" parameterType="string">
        delete  from user where user_id=#{id}
    </delete>


</mapper>
